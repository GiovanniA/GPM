<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/ripple">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background"></solid>
            <padding
                    android:left="@dimen/activity_horizontal_margin"
                    android:top="@dimen/activity_horizontal_margin"
                    android:right="@dimen/activity_vertical_margin"
                    android:bottom="@dimen/activity_vertical_margin">
            </padding>
            <corners
                    android:radius="@dimen/border_radius">
            </corners>
        </shape>
    </item>
</ripple>